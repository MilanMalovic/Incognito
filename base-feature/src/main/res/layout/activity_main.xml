<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivWelcomeIcon"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_incognito"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWelcomeHeader"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_below="@id/ivWelcomeIcon"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/welcome_header"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBelowHeader"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_below="@id/tvWelcomeHeader"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/welcome_below_header"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rlBtnNext"
            android:layout_below="@id/tvBelowHeader"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_blue"
            android:layout_marginTop="30dp"
            android:layout_width="140dp"
            android:layout_height="70dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/arrow_right"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:textSize="25sp"/>



        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>